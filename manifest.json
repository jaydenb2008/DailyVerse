{
    "manifest-version": 3,
    "name": "DailyVerse",
    "version": "1.0",
    "description": "Generates a new bible verse everyday and enables one to understand the intentions of the Lord.",
    "author": "Jayden Bui",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service-worker": "background.js"
    },
    "action": {
        "default-icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html" 
    },
    "permissions": []
}